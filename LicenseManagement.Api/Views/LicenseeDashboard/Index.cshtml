@model List<LicenseManagement.Api.Services.LicenseViewModel>
@{
    ViewData["Title"] = "My Licenses";
}

<div class="row mb-3">
    <div class="col">
        <h5>Your active licenses</h5>
        <p class="text-muted small">See status and expiry of your current licenses.</p>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>License Type</th>
                    <th>Status</th>
                    <th>Expiry</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            You do not have any licenses yet.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LicenseType</td>
                            <td>@item.Status</td>
                            <td>@item.ExpiryDate?.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
