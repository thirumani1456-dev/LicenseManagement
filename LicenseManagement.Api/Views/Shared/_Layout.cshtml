@{
    Layout = null;
    var title = ViewData["Title"] ?? "License Management Portal";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - License Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <!-- Optional icons (Bootstrap Icons) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        body {
            background-color: #f5f7fb;
        }

        .app-header {
            background-color: #ffffff;
        }

        .app-hero {
            background: linear-gradient(135deg, #0f62fe, #1b2838);
            color: #ffffff;
        }

            .app-hero h1 {
                font-size: 1.8rem;
                font-weight: 700;
            }

            .app-hero p {
                opacity: 0.9;
            }

        .app-footer {
            font-size: 0.8rem;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Top Navbar -->
    <header class="app-header shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                Gov License Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AgencyDashboard" asp-action="Index">Agency Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="LicenseeDashboard" asp-action="Index">My Licenses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="http://localhost:5001/hangfire" target="_blank">Hangfire</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Hero strip -->
    <section class="app-hero py-4">
        <div class="container">
            <h1 class="mb-1">@title</h1>
            <p class="mb-0">
                Multi-tenant license management across agencies &mdash; applications, approvals, renewals and more.
            </p>
        </div>
    </section>

    <!-- Main content -->
    <main class="flex-fill">
        <div class="container my-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="app-footer bg-white border-top py-3 mt-auto">
        <div class="container text-muted">
            Multi-Tenant License Management &middot; Demo implementation
        </div>
    </footer>

    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
