@model LicenseManagement.Api.Services.CreateLicenseViewModel
@{
    ViewData["Title"] = "Create License";
}

<div class="row">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">New License Application</h5>
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="ApplicantName" class="form-label"></label>
                        <input asp-for="ApplicantName" class="form-control" />
                        <span asp-validation-for="ApplicantName" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LicenseType" class="form-label"></label>
                        <input asp-for="LicenseType" class="form-control" />
                        <span asp-validation-for="LicenseType" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-link">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
